<configuration>
    <system.webServer>
        <rewrite>
            <rules>
                <rule name="Redirect index.php to home" stopProcessing="true">
                    <match url="/api" ignoreCase="false" />
                    <action type="Redirect" url="/api.php" redirectType="Permanent" />
                </rule>
            </rules>
        </rewrite>      
    </system.webServer>
</configuration>
